{% extends '_layout' %}
{% block main %}
	<title>{% set titel = craft.entries.section('homepage').one() %}
	{{titel.inhaltsverzeichnis}}</title>
</head>
<body>
	{% include 'menu' %}
	<div class="headdiv">
		{% for entry in craft.entries.section('reptilien').limit(10).all() %}
			<h1 id="headline">{{entry.mainheader}}</h1>
		{% endfor %}
	</div>
	{% set entry = craft.entries.section('reptilien').all() %}
	<ul>
        {% nav page in entry %}
            <li>
                <p><a href="{{page.url}}">&nbsp&nbsp{{page.title}}</a> erstellt von {{page.author}} am {{page.postDate | date ('d.m.Y')}}</p>

                {% ifchildren %}
                    <ul style="padding-left: 2rem;">
                        {% children %}
                    </ul>
                {% endifchildren %}
            </li>
        {% endnav %}
    </ul>

	<div style="border-bottom-color:black; border-bottom-style: solid; border-bottom-width: 1px; position: relative; bottom: 5px;">
	</div>
