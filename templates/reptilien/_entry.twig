{% if block.type == 'videos' %}
	{% set count = count+1 %}
	{% set video = block.videoplayer.one() %}
	{% if video %}
		<div class="col s12">
			<video class="responsive-video" controls name="{{video.title}}" width="100%">
				<source src="{{video.url}}" type="video/mp4">
				
			</video>
		</div>
	{% endif %}
{% endif %}
{% if block.type == 'collapse' %}
	{% set count = count+1 %}
