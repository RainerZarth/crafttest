{% block matrix %}
	{% set count = 0 %}
	{% for block in entry.matrix.all() %}
		
		{% if block.type == 'textblock' %}
			{% set count = count+1 %}
			<div class="{{block.sb}}">
				{{ block.txtblck1 }}
			</div>
		{% endif %}
		
		{% if block.type == 'gallery' %}
			{% set count = count+1 %}
			<div class="col s12">
				<div class="carousel carousel-slider" style="height: 600px">
					{# {{ block.galleryfeld }} #}
					{# hier die schleife f√ºr Assets #}
					{% for image in block.galleryfeld.all()%}
						
						{% if image %}
							<div class="carousel-item">
								<div style="height: 100%">
									<div style="height: 80%">
										<img src="{{image.url}}" width="100%" style="margin-bottom: -20vh">
									</div>
									<div class="grey" style="height: 20%; opacity: 0.5">
										<h2 class="flow-text" style="color: #000000">{{image.bildbeschreibung}}</h2>
									</div>
								</div>
							</div>
							
						{% endif %}
						
					{% endfor %}
				</div>
			</div>
		{% endif %}
		{% if block.type == 'iframe' %}
			{% set count = count+1 %}
			<div class="col s12">
				<div class="video-container">
					{{ block.iframefield | raw }}
				</div>
			</div>
		{% endif %}
		{% if block.type == 'videos' %}
			{% set count = count+1 %}
			{% set video = block.videoplayer.one() %}
			{% if video %}
				<div class="col s12">
					<video class="responsive-video" controls name="{{video.title}}" width="100%">
						<source src="{{video.url}}" type="video/mp4">
					</video>
				</div>
			{% endif %}
		{% endif %}
		{% if block.type == 'collapse' %}
			{% set count = count+1 %}
			{% set asset = block.collitems.one() %}
			{% if asset %}
				<div class="col s12">
					<ul class="collapsible">
						<div class="col s12"><span class="valign-wrapper"><i class="material-icons">landscape</i>
						{{block.collheader}}</span></div>
						<img class="col s12" src="{{ asset.url }}">
						<li>
							<div class="collapsible-header"><i class="material-icons">info_outline</i>
							</div>
							<div class="collapsible-body">
								{{block.colltext}}
							</div>
						</li>
						<li>
							<div class="collapsible-header"><i class="material-icons">copyright</i>
							</div>
							<div class="collapsible-body">
								<span>{{asset.bildbeschreibung}}</span>
								<span>Bild von&nbsp{{asset.bildauthor}}&nbspQuelle:&nbsp
									<a href="{{asset.bildquelle}}">{{asset.bildquelle}}</a></span>
									<span>Bildlizenzart:&nbsp{{asset.bildlizenz}}</span>
								</div>
							</li>
						</ul>
					</div>
				{% endif %}
			{% endif %}
			{% if block.type == 'zitat' %}
				{% set count = count+1 %}
				<div class="col s12">
					<blockquote>
						<i class="material-icons">format_quote</i>
						{{block.citation}}
						<p style="font-style: italic;">{{block.author}}</p>
					</blockquote>
				</div>
			{% endif %}
			{# --------SUPERTABLE-------- #}
			{% if block.type == 'aufgabe' %}
				{% set count = count+1 %}
				<div class="col s12">
					<ul class="collapsible">
						
						<li>
							<div class="collapsible-header">
								<span class="valign-wrapper">
									{% if block.icon.icon %}
										{{ block.icon.iconSpan|raw }}
									{% endif %}
									&nbsp{{block.kapitel}}.{{block.ukapitel}}&nbsp{{block.aheader}}
								</span>
								
							</div>
							<div class="collapsible-body">
								{# -------HIER KOMMEN DIE AUFGABEN IM SUPERTABLE REIN------- #}
								{% for row in block.superfeld.all() %}
									{% for umatrix in row.aufgabenmatrix.all() %}
										
										{% if umatrix.type == 'matrixtext' %}
											<div>
												{{ umatrix.textfeld }}
											</div>
										{% endif %}
										{% if umatrix.type == 'iframe' %}
												<div class="video-container">
													{{ umatrix.iframefield | raw }}
												</div>
										{% endif %}
									{% endfor %}									
								{% endfor %}
							</div>
						</li>
					</ul>
				</div>
			{% endif %}
		{% endfor %}
	</div>
</div>
{% endblock %}